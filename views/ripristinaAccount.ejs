<%-include( "../Templates/header" )%>
    <link rel="stylesheet" href="../Styles/ripristinaAccount.css">
    <title>Reimposta Account</title>
    </head>

    <body>
        <%-include( "../Templates/flash" )%>
            <div class="contenitore">
                <h1> Usa questo form per reimpostare il tuo account</h1>
                <form action="/resetAccount/<%=token%>" method="POST" id="register">

                    <div>
                        <label for="email">Email di registrazione</label>
                        <input type="email" id="email" name="email" placeholder="Email" required>
                    </div>
                    <div>
                        <label for="password">Nuova password</label>
                        <input type="password" name="password" id="password" placeholder="Password" required
                            class="input"
                            pattern="^(?=.*[\d])(?=.*[A-Z])(?=.*[a-z])(?=.*[!@#$%^&*])[\w!@#$%^&*]{8,}"></input>
                    </div>
                    <div>
                        <label for="password2">Ripeti Password</label>
                        <input type="password" id="password2" name="password2" placeholder="Password" required
                            class="input"
                            pattern="^(?=.*[\d])(?=.*[A-Z])(?=.*[a-z])(?=.*[!@#$%^&*])[\w!@#$%^&*]{8,}"></input>

                    </div>
                    <div id="error"></div>
                    <button>Reimposta</button>
                    <div class="linkRegistrati">
                        <h2>Non hai ancora un account?</h2> <a href="/register"> Registarti!</a>
                    </div>
                </form>
            </div>
            <script defer src="../Scripts/registerValidation.js"></script>
    </body>